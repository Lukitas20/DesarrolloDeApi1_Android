<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/item_background">

    <!-- Texto para origen y destino -->
    <TextView
        android:id="@+id/originDestinationText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Origen - Destino"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/black" />

    <!-- Texto para tiempo de finalizaciÃ³n -->
    <TextView
        android:id="@+id/completionTimeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tiempo: 00:00"
        android:textSize="14sp"
        android:textColor="@color/gray" />

    <!-- Texto para pago -->
    <TextView
        android:id="@+id/paymentText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pago: $0.00"
        android:textSize="14sp"
        android:textColor="@color/gray" />

    <!-- Texto para estado del pedido -->
    <TextView
        android:id="@+id/orderStatusText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Estado: Completado"
        android:textSize="14sp"
        android:textColor="@color/gray" />
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/background_color"
    tools:context=".activities.HomeActivity">

    <!-- Botón de Configuración -->
    <FrameLayout
        android:id="@+id/settingsButtonContainer"
        android:layout_width="64dp"
        android:layout_height="64dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp">

        <!-- Ícono de configuración (arriba del fondo violeta) -->
        <ImageView
            android:id="@+id/settingsIcon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_settings"
            android:contentDescription="@string/settings"
            app:tint="@color/white"
            android:layout_gravity="center" />

        <!-- Fondo violeta -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/settingsButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="@color/primary_color"
            app:cornerRadius="32dp" />
    </FrameLayout>

    <!-- Botón de Perfil -->
    <FrameLayout
        android:id="@+id/profileButtonContainer"
        android:layout_width="64dp"
        android:layout_height="64dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp">

        <!-- Ícono de perfil (arriba del fondo violeta) -->
        <ImageView
            android:id="@+id/profileIcon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_person"
            android:contentDescription="@string/ver_perfil"
            app:tint="@color/white"
            android:layout_gravity="center" />

        <!-- Fondo violeta -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/profileButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="@color/primary_color"
            app:cornerRadius="32dp" />
    </FrameLayout>

    <!-- Mensaje de bienvenida -->
    <TextView
        android:id="@+id/welcomeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bienvenido"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/primary_text"
        app:layout_constraintTop_toBottomOf="@id/settingsButtonContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Botón para ver rutas disponibles -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/routesButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/ver_rutas"
        android:icon="@drawable/ic_map"
        android:iconTint="@color/white"
        android:backgroundTint="@color/primary_color"
        android:textColor="@color/white"
        app:cornerRadius="16dp"
        app:iconPadding="8dp"
        app:layout_constraintTop_toBottomOf="@id/welcomeText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp" />

    <!-- Botón para ver mis rutas -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/myRoutesButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/ver_mis_rutas"
        android:icon="@drawable/ic_list"
        android:iconTint="@color/white"
        android:backgroundTint="@color/primary_color"
        android:textColor="@color/white"
        app:cornerRadius="16dp"
        app:iconPadding="8dp"
        app:layout_constraintTop_toBottomOf="@id/routesButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>